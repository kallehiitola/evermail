@using Evermail.AdminApp.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

<nav class="sidebar-layout admin-nav">
    <div class="nav-section nav-section--primary">
        <div class="nav-item px-3 admin-nav__brand">
            <a class="navbar-brand evermail-logo" href="/">
                <img src="/evermail_logo.png" alt="Evermail" class="evermail-logo__mark" />
                <span class="evermail-logo__word">evermail</span>
            </a>
            <div class="admin-nav__subtitle">Ops console</div>
        </div>

        <!-- User info lives in the topbar; keep the sidebar clean and navigation-focused. -->

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-speedometer2" aria-hidden="true"></i> Ops Console
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tenants">
                <i class="bi bi-buildings" aria-hidden="true"></i> Tenants & Users
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="business">
                <i class="bi bi-graph-up-arrow" aria-hidden="true"></i> Business Dashboard
            </NavLink>
        </div>
    </div>

    <div class="nav-section nav-section--bottom">
        <AuthorizeView>
            <Authorized>
                <!-- Sign out is in the topbar to keep the sidebar clean -->
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3 admin-nav__env">
            <span class="status-pill">AdminApp</span>
        </div>
    </div>
</nav>

