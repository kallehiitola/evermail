@page "/login"
@rendermode InteractiveServer
@using Evermail.Common.DTOs
@using Evermail.Common.DTOs.Auth
@using System.Net.Http.Json
@using Evermail.WebApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject HttpClient Http
@inject IAuthenticationStateService AuthStateService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Login - Evermail</PageTitle>

<div class="home-wrapper auth-wrapper">
    <div class="auth-grid">
        <section class="page-hero auth-hero">
            <div class="auth-hero-card">
                <div class="auth-hero-card__eyebrow">Welcome back</div>
                <h1>Sign in securely</h1>
                <p class="text-muted mb-3">SSO or password—your tenant stays encrypted either way.</p>
                <div class="auth-hero-card__stats">
                    <div>
                        <span>2FA</span>
                        <small>Ready today</small>
                    </div>
                    <div>
                        <span>99.9%</span>
                        <small>Uptime target</small>
                    </div>
                    <div>
                        <span>GDPR</span>
                        <small>Compliant</small>
                    </div>
                </div>
            </div>
        </section>

        <section class="auth-card">
            <header class="auth-card__header">
                <h2>Sign in</h2>
                <p class="text-muted mb-0">Use your company email or continue with a connected identity provider.</p>
            </header>

            <div class="auth-social">
                <button type="button" class="social-btn social-btn--google" @onclick="@(() => HandleOAuthLogin("Google"))">
                    <i class="bi bi-google"></i>Continue with Google
                </button>
                <button type="button" class="social-btn social-btn--microsoft" @onclick="@(() => HandleOAuthLogin("Microsoft"))">
                    <i class="bi bi-microsoft"></i>Continue with Microsoft
                </button>
            </div>

            <div class="auth-divider"><span>or use your work email</span></div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger auth-alert">@_errorMessage</div>
            }

            <EditForm class="auth-form" Model="@_model" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />
                
                <div class="form-field">
                    <label>Email</label>
                    <InputText @bind-Value="_model.Email" class="modern-input" placeholder="you@company.com" />
                    <ValidationMessage For="@(() => _model.Email)" />
                </div>

                <div class="form-field">
                    <label>Password</label>
                    <InputText @bind-Value="_model.Password" type="password" class="modern-input" placeholder="••••••••••" />
                    <ValidationMessage For="@(() => _model.Password)" />
                </div>

                @if (_needs2FA)
                {
                    <div class="form-field">
                        <label>Two-factor code</label>
                        <InputText @bind-Value="_model.TwoFactorCode" class="modern-input" placeholder="6-digit code" />
                    </div>
                }

                <button type="submit" class="btn btn-primary btn-xl w-100 auth-primary-button" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Login
                </button>
            </EditForm>

            <div class="auth-footer">
                <span>Don't have an account?</span> <a class="auth-link" href="/register">Register here</a>
            </div>
        </section>
    </div>
</div>

@code {
    private LoginModel _model = new();
    private bool _isLoading;
    private bool _needs2FA;
    private string? _errorMessage;

    private string? _returnUrl;

    protected override async Task OnInitializedAsync()
    {
        // Get returnUrl from query string
        var uri = new Uri(Navigation.Uri);
        var queryParams = System.Web.HttpUtility.ParseQueryString(uri.Query);
        _returnUrl = queryParams["returnUrl"];

        // Check if we have a token in query string (OAuth redirect)
        var token = queryParams["token"];

        if (!string.IsNullOrEmpty(token))
        {
            // Store token and update auth state
            await AuthStateService.SetTokenAsync(token);
            
            // Notify authentication state changed
            if (AuthStateProvider is CustomAuthenticationStateProvider customProvider)
            {
                customProvider.NotifyAuthenticationStateChanged();
            }

            // Redirect to returnUrl or home
            var redirectUrl = !string.IsNullOrEmpty(_returnUrl) ? _returnUrl : "/";
            Navigation.NavigateTo(redirectUrl, forceLoad: true);
            return;
        }

        // Check for error from OAuth
        var error = queryParams["error"];
        if (!string.IsNullOrEmpty(error))
        {
            _errorMessage = error switch
            {
                "oauth_failed" => "OAuth authentication failed. Please try again.",
                "no_email" => "Could not retrieve email from OAuth provider.",
                "registration_failed" => "Failed to create user account. Please contact support if this persists.",
                "registration_error" => "An error occurred during registration. Please try again or use email/password registration.",
                _ => "An error occurred during authentication."
            };
        }
    }

    private void HandleOAuthLogin(string provider)
    {
        // Redirect to OAuth endpoint
        var returnUrl = Uri.EscapeDataString("/");
        Navigation.NavigateTo($"/api/v1/auth/{provider.ToLower()}/login?returnUrl={returnUrl}", forceLoad: true);
    }

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var request = new LoginRequest(_model.Email, _model.Password, _model.TwoFactorCode);
            var response = await Http.PostAsJsonAsync("/api/v1/auth/login", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ApiResponse<AuthResponse>>();
                
                if (result?.Success == true && result.Data != null)
                {
                    // Store both tokens in localStorage (access + refresh)
                    await AuthStateService.SetTokenPairAsync(result.Data.Token, result.Data.RefreshToken);
                    
                    // Notify authentication state changed
                    if (AuthStateProvider is CustomAuthenticationStateProvider customProvider)
                    {
                        customProvider.NotifyAuthenticationStateChanged();
                    }

                    // Navigate to returnUrl or home
                    var redirectUrl = !string.IsNullOrEmpty(_returnUrl) ? _returnUrl : "/";
                    Navigation.NavigateTo(redirectUrl, forceLoad: true);
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var error = await response.Content.ReadFromJsonAsync<ApiResponse<object>>();
                if (error?.Error?.Contains("Two-factor") == true)
                {
                    _needs2FA = true;
                    _errorMessage = "Please enter your 2FA code";
                }
                else
                {
                    _errorMessage = error?.Error ?? "Login failed";
                }
            }
            else
            {
                _errorMessage = "Invalid email or password";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public string? TwoFactorCode { get; set; }
    }
}

