@page "/register"
@rendermode InteractiveServer
@using Evermail.Common.DTOs
@using Evermail.Common.DTOs.Auth
@using System.Net.Http.Json
@using Evermail.WebApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject HttpClient Http
@inject IAuthenticationStateService AuthStateService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Register - Evermail</PageTitle>

<div class="home-wrapper auth-wrapper">
    <div class="auth-grid">
        <section class="page-hero auth-hero">
            <p class="hero-eyebrow mb-2">Create workspace</p>
            <h1>Register in minutes</h1>
            <p class="text-muted mb-3">One tenant, one bill, unlimited confidence.</p>
            <ul class="auth-highlights">
                <li><i class="bi bi-building-gear"></i>Dedicated tenant per company</li>
                <li><i class="bi bi-rocket"></i>Free tier with 1 GB to explore</li>
            </ul>
        </section>

        <section class="auth-card">
            <header class="auth-card__header">
                <h2>Create your account</h2>
                <p class="text-muted mb-0">We’ll configure your tenant automatically once you submit this form.</p>
            </header>

            <div class="auth-social">
                <button type="button" class="social-btn social-btn--google" @onclick="@(() => HandleOAuthRegister("Google"))">
                    <i class="bi bi-google"></i> Continue with Google
                </button>
                <button type="button" class="social-btn social-btn--microsoft" @onclick="@(() => HandleOAuthRegister("Microsoft"))">
                    <i class="bi bi-microsoft"></i> Continue with Microsoft
                </button>
            </div>

            <div class="auth-divider"><span>or create with email</span></div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger auth-alert">@_errorMessage</div>
            }

            @if (_success)
            {
                <div class="alert alert-success auth-alert">
                    <strong>Account created!</strong>
                    <p class="mb-0">Redirecting you to the dashboard…</p>
                </div>
            }
            else
            {
                <EditForm class="auth-form" Model="@_model" OnValidSubmit="@HandleRegister">
                    <DataAnnotationsValidator />

                    <div class="form-field-grid">
                        <div class="form-field">
                            <label>First name</label>
                            <InputText @bind-Value="_model.FirstName" class="modern-input" />
                            <ValidationMessage For="@(() => _model.FirstName)" />
                        </div>
                        <div class="form-field">
                            <label>Last name</label>
                            <InputText @bind-Value="_model.LastName" class="modern-input" />
                            <ValidationMessage For="@(() => _model.LastName)" />
                        </div>
                    </div>

                    <div class="form-field">
                        <label>Work email</label>
                        <InputText @bind-Value="_model.Email" class="modern-input" type="email" placeholder="you@company.com" />
                        <ValidationMessage For="@(() => _model.Email)" />
                    </div>

                    <div class="form-field">
                        <label>Password</label>
                        <InputText @bind-Value="_model.Password" type="password" class="modern-input" placeholder="Min 12 characters" />
                        <small class="text-muted">
                            At least 12 characters with upper, lower, number, special.
                        </small>
                        <ValidationMessage For="@(() => _model.Password)" />
                    </div>

                    <div class="form-field">
                        <label>Company / organization name</label>
                        <InputText @bind-Value="_model.TenantName" class="modern-input" placeholder="Acme Corp" />
                        <ValidationMessage For="@(() => _model.TenantName)" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-xl w-100 auth-primary-button" disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Create account
                    </button>
                </EditForm>

                <div class="auth-footer">
                    <span>Already have an account?</span> <a class="auth-link" href="/login">Login here</a>
                </div>
            }
        </section>
    </div>
</div>

@code {
    private RegisterModel _model = new();
    private bool _isLoading;
    private bool _success;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Check if we have a token in query string (OAuth redirect)
        var uri = new Uri(Navigation.Uri);
        var queryParams = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var token = queryParams["token"];

        if (!string.IsNullOrEmpty(token))
        {
            // Store token and update auth state
            await AuthStateService.SetTokenAsync(token);
            
            // Notify authentication state changed
            if (AuthStateProvider is CustomAuthenticationStateProvider customProvider)
            {
                customProvider.NotifyAuthenticationStateChanged();
            }

            // Redirect to clean URL (remove token from query string)
            Navigation.NavigateTo("/", forceLoad: true);
        }

        // Check for error from OAuth
        var error = queryParams["error"];
        if (!string.IsNullOrEmpty(error))
        {
            _errorMessage = error switch
            {
                "oauth_failed" => "OAuth authentication failed. Please try again.",
                "no_email" => "Could not retrieve email from OAuth provider.",
                "registration_failed" => "Failed to create account. Please contact support if this persists.",
                "registration_error" => "An error occurred during registration. Please try again.",
                _ => "An error occurred during authentication."
            };
        }
    }

    private void HandleOAuthRegister(string provider)
    {
        // Redirect to OAuth endpoint (same as login - OAuth handles registration automatically)
        var returnUrl = Uri.EscapeDataString("/");
        Navigation.NavigateTo($"/api/v1/auth/{provider.ToLower()}/login?returnUrl={returnUrl}", forceLoad: true);
    }

    private async Task HandleRegister()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var request = new RegisterRequest(
                _model.Email,
                _model.Password,
                _model.FirstName,
                _model.LastName,
                _model.TenantName
            );

            var response = await Http.PostAsJsonAsync("/api/v1/auth/register", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ApiResponse<AuthResponse>>();
                
                if (result?.Success == true && result.Data != null)
                {
                    _success = true;
                    
                    // Store both tokens in localStorage (access + refresh)
                    await AuthStateService.SetTokenPairAsync(result.Data.Token, result.Data.RefreshToken);
                    
                    // Notify authentication state changed
                    if (AuthStateProvider is CustomAuthenticationStateProvider customProvider)
                    {
                        customProvider.NotifyAuthenticationStateChanged();
                    }

                    // Show success briefly, then redirect to home
                    await Task.Delay(2000);
                    Navigation.NavigateTo("/", forceLoad: true);
                }
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ApiResponse<object>>();
                _errorMessage = error?.Error ?? "Registration failed";
                
                if (error?.ValidationErrors != null)
                {
                    _errorMessage += ": " + string.Join(", ", error.ValidationErrors.SelectMany(kv => kv.Value));
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class RegisterModel
    {
        public string FirstName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public string TenantName { get; set; } = "";
    }
}

