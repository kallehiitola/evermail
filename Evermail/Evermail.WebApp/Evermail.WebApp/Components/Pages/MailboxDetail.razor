@page "/mailboxes/{Id:guid}"
@rendermode InteractiveServer
@using Evermail.Common.DTOs
@using Evermail.Common.DTOs.Mailbox
@using Microsoft.AspNetCore.Components.Authorization
@using Evermail.WebApp.Services
@using System.Net.Http.Json
@implements IDisposable
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IAuthenticationStateService AuthStateService

<PageTitle>Mailbox Details - Evermail</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="home-wrapper mailbox-detail-wrapper">
            @if (_isLoading)
            {
                <div class="card modern-card text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 mb-0 text-muted">Loading mailbox details…</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger modern-alert">
                    <strong>Error:</strong> @_errorMessage
                </div>
            }
            else if (_mailbox is null)
            {
                <div class="card modern-card text-center">
                    <h3>Mailbox not found</h3>
                    <p class="text-muted mb-4">The mailbox you're looking for doesn't exist or you lack permission.</p>
                    <a href="/mailboxes" class="btn btn-primary">Back to Mailboxes</a>
                </div>
            }
            else
            {
                <section class="detail-hero">
                    <div class="detail-hero__left">
                        <button class="btn btn-outline-secondary detail-back" @onclick="NavigateBack">
                            <i class="bi bi-arrow-left me-2"></i>Back to Mailboxes
                        </button>
                        <h1>@_mailbox.FileName</h1>
                        <p class="text-muted mb-0">Imported via .mbox · Last updated @FormatTimestamp(_mailbox.CreatedAt)</p>
                    </div>
                    <div class="detail-hero__right">
                        <span class="status-pill @GetStatusClass(_mailbox.Status)">
                            @_mailbox.Status
                            @if (_mailbox.Status == "Processing")
                            {
                                <i class="bi bi-arrow-repeat ms-2 spin"></i>
                            }
                        </span>
                        <div class="detail-meta">
                            <span>File size <strong>@FormatFileSize(_mailbox.FileSizeBytes)</strong></span>
                            <span>Uploaded <strong>@FormatTimestamp(_mailbox.CreatedAt)</strong></span>
                        </div>
                        @if (_mailbox.Status == "Completed")
                        {
                            <a class="btn btn-primary" href="/emails?mailbox=@_mailbox.Id">
                                <i class="bi bi-envelope me-2"></i>View Emails
                            </a>
                        }
                        <div class="action-pill-group mt-3">
                            <a href="/upload?mailboxId=@_mailbox.Id" class="action-pill">
                                <i class="bi bi-arrow-repeat"></i>
                                Reimport
                            </a>
                            <button type="button" class="action-pill" @onclick="OpenRenameModal">
                                <i class="bi bi-pencil"></i>
                                Rename
                            </button>
                            <button type="button" class="action-pill danger" @onclick="OpenDeleteModal">
                                <i class="bi bi-trash"></i>
                                Delete
                            </button>
                        </div>
                    </div>
                </section>

                <section class="stat-grid">
                    <div class="stat-card">
                        <h3>Total emails</h3>
                        <div class="stat-value">@(_mailbox.TotalEmails > 0 ? _mailbox.TotalEmails.ToString("N0") : "—")</div>
                        <p class="text-muted small mb-0">Processed @_mailbox.ProcessedEmails.ToString("N0")</p>
                    </div>
                    <div class="stat-card">
                        <h3>Failed emails</h3>
                        <div class="stat-value">@(_mailbox.FailedEmails > 0 ? _mailbox.FailedEmails.ToString("N0") : "0")</div>
                        <p class="text-muted small mb-0">Automatic retries after parsing errors</p>
                    </div>
                    <div class="stat-card">
                        <h3>Lifecycle</h3>
                        <div class="stat-value">@LifecycleText()</div>
                        <p class="text-muted small mb-0">@(_mailbox.IsPendingDeletion ? "Scheduled for deletion" : "Active archive")</p>
                    </div>
                </section>

                @if (_mailbox.Status == "Processing")
                {
                    <section class="progress-card">
                        <p class="hero-eyebrow mb-2">Processing</p>
                        <h2>Ingestion progress</h2>
                        @{
                            var (progress, progressText) = CalculateProgress(_mailbox);
                        }
                        <div class="usage-progress progress large">
                            <div class="progress-bar" style="width:@progress%"></div>
                        </div>
                        <div class="d-flex justify-content-between text-muted small">
                            <span>@progressText</span>
                            <span>@progress%</span>
                        </div>
                    </section>
                }
                else if (_mailbox.Status == "Queued")
                {
                    <section class="progress-card">
                        <p class="hero-eyebrow mb-2">Queued</p>
                        <h2>Waiting for worker</h2>
                        <div class="d-flex align-items-center text-muted">
                            <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                                <span class="visually-hidden">Waiting...</span>
                            </div>
                            <span>Upload received. Refreshing automatically once processing begins.</span>
                        </div>
                    </section>
                }

                <section class="detail-grid">
                    <div class="detail-card">
                        <h3>Statistics</h3>
                        <dl class="detail-dl">
                            <div>
                                <dt>Total emails</dt>
                                <dd>@(_mailbox.TotalEmails > 0 ? _mailbox.TotalEmails.ToString("N0") : "—")</dd>
                            </div>
                            <div>
                                <dt>Processed</dt>
                                <dd>@(_mailbox.ProcessedEmails > 0 ? _mailbox.ProcessedEmails.ToString("N0") : "—")</dd>
                            </div>
                            <div>
                                <dt>Failed</dt>
                                <dd class="@(_mailbox.FailedEmails > 0 ? "text-danger" : "text-muted")">
                                    @_mailbox.FailedEmails.ToString("N0")
                                </dd>
                            </div>
                        </dl>
                    </div>
                    <div class="detail-card">
                        <h3>Timeline</h3>
                        <dl class="detail-dl">
                            <div>
                                <dt>Uploaded</dt>
                                <dd>@FormatTimestamp(_mailbox.CreatedAt)</dd>
                            </div>
                            @if (_mailbox.ProcessingStartedAt.HasValue)
                            {
                                <div>
                                    <dt>Processing started</dt>
                                    <dd>@FormatTimestamp(_mailbox.ProcessingStartedAt.Value)</dd>
                                </div>
                            }
                            @if (_mailbox.ProcessingCompletedAt.HasValue)
                            {
                                <div>
                                    <dt>Completed</dt>
                                    <dd>@FormatTimestamp(_mailbox.ProcessingCompletedAt.Value)</dd>
                                </div>
                                @if (_mailbox.ProcessingStartedAt.HasValue)
                                {
                                    var duration = _mailbox.ProcessingCompletedAt.Value - _mailbox.ProcessingStartedAt.Value;
                                    <div>
                                        <dt>Duration</dt>
                                        <dd>@FormatDuration(duration)</dd>
                                    </div>
                                }
                            }
                        </dl>
                    </div>
                </section>

                @if (!string.IsNullOrEmpty(_mailbox.ErrorMessage))
                {
                    <div class="alert alert-danger modern-alert">
                        <h5>Error details</h5>
                        <p class="mb-0">@_mailbox.ErrorMessage</p>
                    </div>
                }

                @if (_showRenameModal && _mailbox is not null)
                {
                    <div class="modal fade show detail-modal d-block" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content glass-panel">
                                <div class="modal-header">
                                    <div>
                                        <p class="hero-eyebrow mb-1">Rename mailbox</p>
                                        <h4 class="mb-0">@(_mailbox.DisplayName ?? _mailbox.FileName)</h4>
                                    </div>
                                    <button type="button" class="btn-close" @onclick="CloseRenameModal"></button>
                                </div>
                                <div class="modal-body">
                                    <label class="form-label fw-semibold">Display name</label>
                                    <input class="form-control form-control-lg" @bind="_renameDisplayName" maxlength="500" placeholder="e.g. Sales inbox" />
                                    @if (!string.IsNullOrEmpty(_modalError))
                                    {
                                        <div class="alert alert-danger modern-alert mt-3">@_modalError</div>
                                    }
                                </div>
                                <div class="modal-footer justify-content-between">
                                    <button class="btn btn-outline-secondary" @onclick="CloseRenameModal">Cancel</button>
                                    <button class="btn btn-primary" @onclick="SaveRenameAsync">
                                        <i class="bi bi-check2 me-1"></i>Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (_showDeleteModal && _mailbox is not null)
                {
                    <div class="modal fade show detail-modal d-block" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content glass-panel">
                                <div class="modal-header">
                                    <div>
                                        <p class="hero-eyebrow mb-1 text-danger">Danger zone</p>
                                        <h4 class="mb-0">Delete "@(_mailbox.DisplayName ?? _mailbox.FileName)"</h4>
                                    </div>
                                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-muted mb-3">Choose what you want to remove:</p>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="detailDeleteUpload" @bind="_deleteModel.DeleteUpload" />
                                        <label class="form-check-label fw-semibold" for="detailDeleteUpload">
                                            Delete uploaded file (.mbox)
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="detailDeleteEmails" @bind="_deleteModel.DeleteEmails" />
                                        <label class="form-check-label fw-semibold" for="detailDeleteEmails">
                                            Delete indexed emails
                                        </label>
                                    </div>
                                    @if (_canPurgeImmediately)
                                    {
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="detailPurgeNow" @bind="_deleteModel.PurgeNow" />
                                            <label class="form-check-label fw-semibold" for="detailPurgeNow">
                                                Purge immediately (SuperAdmins only)
                                            </label>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(_modalError))
                                    {
                                        <div class="alert alert-danger modern-alert">@_modalError</div>
                                    }
                                    else
                                    {
                                        @if (_canPurgeImmediately)
                                        {
                                            <div class="alert alert-warning modern-alert subtle-warning">
                                                Unless purge is requested, deletion jobs run after a 30-day retention window.
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning modern-alert subtle-warning">
                                                Deletion jobs run after a 30-day retention window.
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="modal-footer justify-content-between">
                                    <button class="btn btn-outline-secondary" @onclick="CloseDeleteModal">Cancel</button>
                                    <button class="btn btn-danger" @onclick="ScheduleDeletionAsync">
                                        <i class="bi bi-trash me-1"></i>Schedule Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <CheckAuthAndRedirect />
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public Guid Id { get; set; }

    private MailboxDto? _mailbox;
    private bool _isLoading = true;
    private string _errorMessage = "";
    private System.Threading.Timer? _refreshTimer;
    private bool _showRenameModal;
    private bool _showDeleteModal;
    private string _renameDisplayName = string.Empty;
    private DeleteMailboxModel _deleteModel = new();
    private string _modalError = string.Empty;
    private bool _canPurgeImmediately;

    protected override async Task OnInitializedAsync()
    {
        await EvaluatePurgePermissionAsync();
        await LoadMailbox();
        
        // Auto-refresh every 3 seconds when the mailbox is queued or processing
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            if (ShouldAutoRefresh(_mailbox?.Status))
            {
                await InvokeAsync(async () =>
                {
                    await LoadMailbox(silent: true);
                    StateHasChanged();
                });
            }
        }, null, TimeSpan.FromSeconds(3), TimeSpan.FromSeconds(3));
    }

    private async Task LoadMailbox(bool silent = false)
    {
        if (!silent)
        {
            _isLoading = true;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "You must be logged in";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{Id}";
            var request = new HttpRequestMessage(HttpMethod.Get, url);
            request.Headers.Add("Authorization", $"Bearer {token}");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ApiResponse<MailboxDto>>();
                if (result?.Success == true && result.Data != null)
                {
                    _mailbox = result.Data;
                    _errorMessage = "";
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                _mailbox = null;
                _errorMessage = "";
            }
            else
            {
                _errorMessage = $"Failed to load mailbox: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private static bool ShouldAutoRefresh(string? status) =>
        string.Equals(status, "Processing", StringComparison.OrdinalIgnoreCase) ||
        string.Equals(status, "Queued", StringComparison.OrdinalIgnoreCase);

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
        {
            return $"{(int)duration.TotalHours}h {duration.Minutes}m {duration.Seconds}s";
        }
        else if (duration.TotalMinutes >= 1)
        {
            return $"{duration.Minutes}m {duration.Seconds}s";
        }
        else
        {
            return $"{duration.Seconds}s";
        }
    }

    private RenderFragment GetStatusBadge(string status) => status switch
    {
        "Pending" => @<span class="badge bg-secondary">Pending</span>,
        "Processing" => @<span class="badge bg-info">Processing</span>,
        "Completed" => @<span class="badge bg-success">Completed</span>,
        "Failed" => @<span class="badge bg-danger">Failed</span>,
        _ => @<span class="badge bg-secondary">@status</span>
    };

    private (int Progress, string Text) CalculateProgress(MailboxDto mailbox)
    {
        if (mailbox.TotalEmails > 0)
        {
            var progress = (int)((double)mailbox.ProcessedEmails / mailbox.TotalEmails * 100);
            var text = $"Processed {mailbox.ProcessedEmails:N0} of {mailbox.TotalEmails:N0} emails";
            return (progress, text);
        }

        if (mailbox.FileSizeBytes > 0 && mailbox.ProcessedBytes > 0)
        {
            var progress = (int)((double)mailbox.ProcessedBytes / mailbox.FileSizeBytes * 100);
            var processedMB = mailbox.ProcessedBytes / (1024.0 * 1024.0);
            var totalMB = mailbox.FileSizeBytes / (1024.0 * 1024.0);
            var text = $"Processed {processedMB:F2} MB of {totalMB:F2} MB ({mailbox.ProcessedEmails:N0} emails)";
            return (progress, text);
        }

        return (0, "Starting…");
    }

    private string FormatTimestamp(DateTime value) =>
        value.ToString("yyyy-MM-dd HH:mm:ss 'UTC'");

    private string LifecycleText() =>
        _mailbox switch
        {
            null => "—",
            { IsPendingDeletion: true } => "Scheduled for deletion",
            { UploadRemoved: true } => "Upload removed",
            _ => "Active"
        };

    private string GetStatusClass(string status) => status switch
    {
        "Completed" => "status-pill--success",
        "Processing" => "status-pill--processing",
        "Failed" => "status-pill--danger",
        _ => "status-pill--neutral"
    };

    private void OpenRenameModal()
    {
        if (_mailbox is null)
        {
            return;
        }

        _renameDisplayName = _mailbox.DisplayName ?? _mailbox.FileName;
        _modalError = string.Empty;
        _showRenameModal = true;
    }

    private void CloseRenameModal()
    {
        _showRenameModal = false;
        _modalError = string.Empty;
    }

    private async Task SaveRenameAsync()
    {
        if (_mailbox is null)
        {
            return;
        }

        if (string.IsNullOrWhiteSpace(_renameDisplayName))
        {
            _modalError = "Display name cannot be empty.";
            return;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _modalError = "Authentication required.";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{_mailbox.Id}";
            var request = new HttpRequestMessage(HttpMethod.Patch, url);
            request.Headers.Add("Authorization", $"Bearer {token}");
            var newName = _renameDisplayName.Trim();
            request.Content = JsonContent.Create(new RenameMailboxRequest(newName));

            var response = await Http.SendAsync(request);
            if (!response.IsSuccessStatusCode)
            {
                _modalError = $"Failed to rename mailbox ({response.StatusCode})";
                return;
            }

            _mailbox = _mailbox with { DisplayName = newName };
            CloseRenameModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
    }

    private void OpenDeleteModal()
    {
        if (_mailbox is null)
        {
            return;
        }

        _deleteModel = new DeleteMailboxModel();
        _modalError = string.Empty;
        _showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        _showDeleteModal = false;
        _modalError = string.Empty;
    }

    private async Task ScheduleDeletionAsync()
    {
        if (_mailbox is null)
        {
            return;
        }

        if (!_deleteModel.DeleteUpload && !_deleteModel.DeleteEmails)
        {
            _modalError = "Select at least one option to delete.";
            return;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _modalError = "Authentication required.";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{_mailbox.Id}/delete";
            var request = new HttpRequestMessage(HttpMethod.Post, url);
            request.Headers.Add("Authorization", $"Bearer {token}");
            request.Content = JsonContent.Create(new DeleteMailboxRequest(
                _deleteModel.DeleteUpload,
                _deleteModel.DeleteEmails,
                _deleteModel.PurgeNow,
                null));

            var response = await Http.SendAsync(request);
            if (!response.IsSuccessStatusCode)
            {
                _modalError = $"Failed to schedule deletion ({response.StatusCode})";
                return;
            }

            _mailbox = _mailbox with { IsPendingDeletion = true };
            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
    }

    private void NavigateBack() => Navigation.NavigateTo("/mailboxes");

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    private sealed class DeleteMailboxModel
    {
        public bool DeleteUpload { get; set; }
        public bool DeleteEmails { get; set; }
        public bool PurgeNow { get; set; }
    }

    private async Task EvaluatePurgePermissionAsync()
    {
        try
        {
            var principal = await AuthStateService.GetUserFromTokenAsync();
            _canPurgeImmediately = principal?.IsInRole("SuperAdmin") == true;
        }
        catch
        {
            _canPurgeImmediately = false;
        }
    }
}

