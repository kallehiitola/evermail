@page "/mailboxes"
@rendermode InteractiveServer
@using Evermail.Common.DTOs
@using Evermail.Common.DTOs.Mailbox
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Evermail.WebApp.Services
@using System.Net.Http.Json
@using System.Linq
@implements IDisposable
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IAuthenticationStateService AuthStateService

<PageTitle>My Mailboxes - Evermail</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="home-wrapper">
            <section class="page-hero">
                <div>
                    <p class="hero-eyebrow mb-2">Mailboxes</p>
                    <h1>All Mailboxes & Imports</h1>
                    <p class="text-muted">
                        Track ingestion jobs, storage usage, and lifecycle policies across every mailbox in your tenant.
                    </p>
                </div>
                <div class="cta-group flex-column flex-sm-row">
                    <a href="/upload" class="btn btn-primary">
                        <i class="bi bi-cloud-upload me-2"></i>Upload Mailbox
                    </a>
                    <button class="btn btn-outline-secondary"
                            @onclick="() => LoadMailboxes(_currentPage)"
                            disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Refresh
                    </button>
                </div>
            </section>

            <section class="stat-grid">
                @foreach (var stat in _summaryCards)
                {
                    <div class="stat-card">
                        <h3>@stat.Label</h3>
                        <div class="stat-value">@stat.Value</div>
                        @if (!string.IsNullOrEmpty(stat.Caption))
                        {
                            <p class="text-muted small mb-0">@stat.Caption</p>
                        }
                    </div>
                }
            </section>

            @if (_isLoading)
            {
                <div class="card modern-card text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 mb-0 text-muted">Loading mailboxes…</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger modern-alert">
                    <strong>Heads up:</strong> @_errorMessage
                </div>
            }
            else if (_mailboxes == null || !_mailboxes.Any())
            {
                <div class="card modern-card empty-state-card text-center">
                    <i class="bi bi-inbox display-5 text-muted"></i>
                    <h3>No mailboxes yet</h3>
                    <p class="text-muted mb-4">
                        Import your first .mbox archive to unlock full-text search and AI summaries.
                    </p>
                    <a href="/upload" class="btn btn-primary">
                        <i class="bi bi-cloud-upload me-2"></i>Upload Mailbox
                    </a>
                </div>
            }
            else
            {
                <section class="table-card">
                    <div class="table-card__header">
                        <div>
                            <p class="hero-eyebrow mb-1">Mailboxes</p>
                            <h2 class="mb-0">@FormatNumber(_totalCount) total</h2>
                        </div>
                        <div class="table-card__controls">
                            <span class="badge rounded-pill bg-light text-dark">
                                Page @_currentPage of @_totalPages
                            </span>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table data-table align-middle">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                    <th>Lifecycle</th>
                                    <th>Progress</th>
                                    <th>Emails</th>
                                    <th>Uploaded</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mailbox in _mailboxes)
                                {
                                    <tr>
                                        <td>
                                            <strong>@(mailbox.DisplayName ?? mailbox.FileName)</strong>
                                            @if (mailbox.DisplayName != mailbox.FileName && !string.IsNullOrEmpty(mailbox.FileName))
                                            {
                                                <div class="text-muted small">@mailbox.FileName</div>
                                            }
                                        </td>
                                        <td>@FormatFileSize(mailbox.FileSizeBytes)</td>
                                        <td>@GetStatusBadge(mailbox.Status)</td>
                                        <td>@GetLifecycleBadge(mailbox)</td>
                                        <td>
                                            @if (mailbox.Status == "Processing")
                                            {
                                                int progress;
                                                if (mailbox.TotalEmails > 0)
                                                {
                                                    progress = (int)((double)mailbox.ProcessedEmails / mailbox.TotalEmails * 100);
                                                }
                                                else if (mailbox.FileSizeBytes > 0 && mailbox.ProcessedBytes > 0)
                                                {
                                                    progress = (int)((double)mailbox.ProcessedBytes / mailbox.FileSizeBytes * 100);
                                                }
                                                else
                                                {
                                                    progress = 0;
                                                }

                                                <div class="usage-progress progress">
                                                    <div class="progress-bar" style="width:@progress%"></div>
                                                </div>
                                                <small class="text-muted">@progress%</small>
                                            }
                                            else if (mailbox.Status == "Completed")
                                            {
                                                <span class="text-success fw-semibold">100%</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">–</span>
                                            }
                                        </td>
                                        <td>
                                            @if (mailbox.Status == "Completed")
                                            {
                                                <span>@mailbox.ProcessedEmails</span>
                                                @if (mailbox.FailedEmails > 0)
                                                {
                                                    <span class="text-danger small ms-1">(@mailbox.FailedEmails failed)</span>
                                                }
                                            }
                                            else if (mailbox.Status == "Processing")
                                            {
                                                <span>@mailbox.ProcessedEmails / @mailbox.TotalEmails</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">–</span>
                                            }
                                        </td>
                                        <td>
                                            <small>@mailbox.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                        </td>
                                        <td>
                                            <div class="action-pill-group">
                                                <a href="/mailboxes/@mailbox.Id" class="action-pill">
                                                    <i class="bi bi-eye"></i>
                                                    View
                                                </a>
                                                <a href="/upload?mailboxId=@mailbox.Id" class="action-pill">
                                                    <i class="bi bi-arrow-repeat"></i>
                                                    Reimport
                                                </a>
                                                <button type="button" class="action-pill" @onclick="() => OpenRenameModal(mailbox)">
                                                    <i class="bi bi-pencil"></i>
                                                    Rename
                                                </button>
                                                <button type="button" class="action-pill danger" @onclick="() => OpenDeleteModal(mailbox)">
                                                    <i class="bi bi-trash"></i>
                                                    Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (_totalPages > 1)
                    {
                        <div class="table-pagination">
                            <button class="btn btn-outline-secondary btn-sm"
                                    disabled="@(_currentPage == 1)"
                                    @onclick="() => LoadMailboxes(_currentPage - 1)">
                                Previous
                            </button>
                            <span class="text-muted small">
                                Page @_currentPage of @_totalPages
                            </span>
                            <button class="btn btn-outline-secondary btn-sm"
                                    disabled="@(_currentPage == _totalPages)"
                                    @onclick="() => LoadMailboxes(_currentPage + 1)">
                                Next
                            </button>
                        </div>
                    }
                </section>

                @if (_showRenameModal && _activeMailbox is not null)
                {
                    <div class="modal fade show detail-modal d-block" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content glass-panel">
                                <div class="modal-header">
                                    <div>
                                        <p class="hero-eyebrow mb-1">Rename mailbox</p>
                                        <h4 class="mb-0">@(_activeMailbox.DisplayName ?? _activeMailbox.FileName)</h4>
                                    </div>
                                    <button type="button" class="btn-close" @onclick="CloseRenameModal"></button>
                                </div>
                                <div class="modal-body">
                                    <label class="form-label fw-semibold">Display name</label>
                                    <input class="form-control form-control-lg" @bind="_renameDisplayName" maxlength="500" placeholder="e.g. Sales inbox" />
                                    @if (!string.IsNullOrEmpty(_modalError))
                                    {
                                        <div class="alert alert-danger modern-alert mt-3">@_modalError</div>
                                    }
                                </div>
                                <div class="modal-footer justify-content-between">
                                    <button class="btn btn-outline-secondary" @onclick="CloseRenameModal">Cancel</button>
                                    <button class="btn btn-primary" @onclick="SaveRenameAsync">
                                        <i class="bi bi-check2 me-1"></i>Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (_showDeleteModal && _activeMailbox is not null)
                {
                    <div class="modal fade show detail-modal d-block" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content glass-panel">
                                <div class="modal-header">
                                    <div>
                                        <p class="hero-eyebrow mb-1 text-danger">Danger zone</p>
                                        <h4 class="mb-0">Delete "@(_activeMailbox.DisplayName ?? _activeMailbox.FileName)"</h4>
                                    </div>
                                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-muted mb-3">Choose what you want to remove:</p>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="deleteUpload" @bind="_deleteModel.DeleteUpload" />
                                        <label class="form-check-label fw-semibold" for="deleteUpload">
                                            Delete uploaded file (.mbox)
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" id="deleteEmails" @bind="_deleteModel.DeleteEmails" />
                                        <label class="form-check-label fw-semibold" for="deleteEmails">
                                            Delete indexed emails
                                        </label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="purgeNow" @bind="_deleteModel.PurgeNow" />
                                        <label class="form-check-label fw-semibold" for="purgeNow">
                                            Purge immediately (SuperAdmins only)
                                        </label>
                                    </div>
                                    @if (!string.IsNullOrEmpty(_modalError))
                                    {
                                        <div class="alert alert-danger modern-alert">@_modalError</div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning modern-alert subtle-warning">
                                            Unless purge is requested, deletion jobs run after a 30-day retention window.
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer justify-content-between">
                                    <button class="btn btn-outline-secondary" @onclick="CloseDeleteModal">Cancel</button>
                                    <button class="btn btn-danger" @onclick="ScheduleDeletionAsync">
                                        <i class="bi bi-trash me-1"></i>Schedule Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <CheckAuthAndRedirect />
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<MailboxDto>? _mailboxes;
    private bool _isLoading = true;
    private string _errorMessage = "";
    private int _currentPage = 1;
    private int _totalPages = 1;
    private int _totalCount;
    private IReadOnlyList<MailboxSummaryCard> _summaryCards = Array.Empty<MailboxSummaryCard>();
    private System.Threading.Timer? _refreshTimer;
    private MailboxDto? _activeMailbox;
    private bool _showRenameModal;
    private bool _showDeleteModal;
    private string _renameDisplayName = string.Empty;
    private DeleteMailboxModel _deleteModel = new();
    private string _modalError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadMailboxes(1);
        
        // Auto-refresh every 5 seconds if there are processing mailboxes
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            if (_mailboxes?.Any(m => m.Status == "Processing") == true)
            {
                await InvokeAsync(async () =>
                {
                    await LoadMailboxes(_currentPage, silent: true);
                    StateHasChanged();
                });
            }
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private async Task LoadMailboxes(int page = 1, bool silent = false)
    {
        if (!silent)
        {
            _isLoading = true;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "You must be logged in";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes?page={page}&pageSize=20";
            var request = new HttpRequestMessage(HttpMethod.Get, url);
            request.Headers.Add("Authorization", $"Bearer {token}");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ApiResponse<PagedMailboxesResponse>>();
                if (result?.Success == true && result.Data != null)
                {
                    _mailboxes = result.Data.Items;
                    _totalCount = result.Data.TotalCount;
                    _currentPage = result.Data.Page;
                    _totalPages = (int)Math.Ceiling((double)result.Data.TotalCount / result.Data.PageSize);
                    _errorMessage = "";
                    UpdateSummaryCards();
                }
            }
            else
            {
                _errorMessage = $"Failed to load mailboxes: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateSummaryCards()
    {
        var items = _mailboxes ?? new List<MailboxDto>();
        var completed = items.Count(m => string.Equals(m.Status, "Completed", StringComparison.OrdinalIgnoreCase));
        var processing = items.Count(m => string.Equals(m.Status, "Processing", StringComparison.OrdinalIgnoreCase));
        var pending = items.Count(m => string.Equals(m.Status, "Pending", StringComparison.OrdinalIgnoreCase));
        var storageBytes = items.Sum(m => m.FileSizeBytes);
        var pendingDeletion = items.Count(m => m.IsPendingDeletion);
        var newest = items.OrderByDescending(m => m.CreatedAt).FirstOrDefault();

        _summaryCards = new[]
        {
            new MailboxSummaryCard("Total mailboxes", FormatNumber(_totalCount), $"{completed} ready · {processing} processing"),
            new MailboxSummaryCard("Storage indexed", FormatFileSize(storageBytes), pending > 0 ? $"{pending} pending ingest" : "All caught up"),
            new MailboxSummaryCard("Lifecycle", pendingDeletion > 0 ? $"{pendingDeletion} pending purge" : "Healthy", newest is null ? "No uploads yet" : $"Latest upload {newest.CreatedAt:MMM d • HH:mm}")
        };
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private static string FormatNumber(long value)
    {
        if (value >= 1_000_000)
        {
            return $"{value / 1_000_000d:0.#}M";
        }

        if (value >= 1_000)
        {
            return $"{value / 1_000d:0.#}K";
        }

        return value.ToString("N0");
    }

    private RenderFragment GetStatusBadge(string status) => status switch
    {
        "Pending" => @<span class="badge bg-secondary">Pending</span>,
        "Queued" => @<span class="badge bg-info text-dark">Queued</span>,
        "Processing" => @<span class="badge bg-info text-dark">Processing</span>,
        "Completed" => @<span class="badge bg-success">Completed</span>,
        "Failed" => @<span class="badge bg-danger">Failed</span>,
        _ => @<span class="badge bg-secondary">@status</span>
    };

    private RenderFragment GetLifecycleBadge(MailboxDto mailbox)
    {
        if (mailbox.IsPendingDeletion)
        {
            return @<span class="badge bg-warning text-dark">Pending deletion</span>;
        }

        if (mailbox.UploadRemoved)
        {
            return @<span class="badge bg-secondary">Upload removed</span>;
        }

        return @<span class="badge bg-light text-dark">Active</span>;
    }

    private void OpenRenameModal(MailboxDto mailbox)
    {
        _activeMailbox = mailbox;
        _renameDisplayName = mailbox.DisplayName ?? mailbox.FileName;
        _modalError = string.Empty;
        _showRenameModal = true;
    }

    private void CloseRenameModal()
    {
        _showRenameModal = false;
        _activeMailbox = null;
        _modalError = string.Empty;
    }

    private void OpenDeleteModal(MailboxDto mailbox)
    {
        _activeMailbox = mailbox;
        _deleteModel = new DeleteMailboxModel();
        _modalError = string.Empty;
        _showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        _showDeleteModal = false;
        _activeMailbox = null;
        _modalError = string.Empty;
    }

    private async Task SaveRenameAsync()
    {
        if (_activeMailbox is null)
        {
            return;
        }

        if (string.IsNullOrWhiteSpace(_renameDisplayName))
        {
            _modalError = "Display name cannot be empty.";
            return;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _modalError = "Authentication required.";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{_activeMailbox.Id}";
            var request = new HttpRequestMessage(HttpMethod.Patch, url);
            request.Headers.Add("Authorization", $"Bearer {token}");
            request.Content = JsonContent.Create(new RenameMailboxRequest(_renameDisplayName.Trim()));

            var response = await Http.SendAsync(request);
            if (!response.IsSuccessStatusCode)
            {
                _modalError = $"Failed to rename mailbox ({response.StatusCode})";
                return;
            }

            if (_mailboxes != null)
            {
                _mailboxes = _mailboxes
                    .Select(m => m.Id == _activeMailbox.Id
                        ? m with { DisplayName = _renameDisplayName.Trim() }
                        : m)
                    .ToList();
            }

            CloseRenameModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
    }

    private async Task ScheduleDeletionAsync()
    {
        if (_activeMailbox is null)
        {
            return;
        }

        if (!_deleteModel.DeleteUpload && !_deleteModel.DeleteEmails)
        {
            _modalError = "Select at least one option to delete.";
            return;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _modalError = "Authentication required.";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{_activeMailbox.Id}/delete";
            var request = new HttpRequestMessage(HttpMethod.Post, url);
            request.Headers.Add("Authorization", $"Bearer {token}");
            request.Content = JsonContent.Create(new DeleteMailboxRequest(
                _deleteModel.DeleteUpload,
                _deleteModel.DeleteEmails,
                _deleteModel.PurgeNow,
                null));

            var response = await Http.SendAsync(request);
            if (!response.IsSuccessStatusCode)
            {
                _modalError = $"Failed to schedule deletion ({response.StatusCode})";
                return;
            }

            if (_mailboxes != null)
            {
                _mailboxes = _mailboxes
                    .Select(m => m.Id == _activeMailbox.Id
                        ? m with { IsPendingDeletion = true }
                        : m)
                    .ToList();
            }

            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
    }

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    private sealed class DeleteMailboxModel
    {
        public bool DeleteUpload { get; set; }
        public bool DeleteEmails { get; set; }
        public bool PurgeNow { get; set; }
    }

    private record MailboxSummaryCard(string Label, string Value, string? Caption = null);
}

