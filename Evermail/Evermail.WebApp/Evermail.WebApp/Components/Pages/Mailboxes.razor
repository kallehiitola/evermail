@page "/mailboxes"
@rendermode InteractiveServer
@using Evermail.Common.DTOs
@using Evermail.Common.DTOs.Mailbox
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Evermail.WebApp.Services
@using System.Net.Http.Json
@implements IDisposable
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IAuthenticationStateService AuthStateService

<PageTitle>My Mailboxes - Evermail</PageTitle>

<AuthorizeView>
    <Authorized>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Mailboxes</h1>
        <a href="/upload" class="btn btn-primary">
            <i class="bi bi-cloud-upload"></i> Upload New Mailbox
        </a>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading mailboxes...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @_errorMessage
        </div>
    }
    else if (_mailboxes == null || !_mailboxes.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h3 class="mt-3">No Mailboxes Yet</h3>
                <p class="text-muted">Upload your first .mbox file to get started!</p>
                <a href="/upload" class="btn btn-primary btn-lg">
                    <i class="bi bi-cloud-upload"></i> Upload Mailbox
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Size</th>
                                <th>Status</th>
                                <th>Lifecycle</th>
                                <th>Progress</th>
                                <th>Emails</th>
                                <th>Uploaded</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mailbox in _mailboxes)
                            {
                                <tr>
                                    <td>
                                        <strong>@(mailbox.DisplayName ?? mailbox.FileName)</strong>
                                        @if (mailbox.DisplayName != mailbox.FileName && !string.IsNullOrEmpty(mailbox.FileName))
                                        {
                                            <div class="text-muted small">@mailbox.FileName</div>
                                        }
                                    </td>
                                    <td>@FormatFileSize(mailbox.FileSizeBytes)</td>
                                    <td>
                                        @GetStatusBadge(mailbox.Status)
                                    </td>
                                    <td>
                                        @GetLifecycleBadge(mailbox)
                                    </td>

                                    <td>
                                        @if (mailbox.Status == "Processing")
                                        {
                                            int progress;
                                            if (mailbox.TotalEmails > 0)
                                            {
                                                // Use email count if we know the total
                                                progress = (int)((double)mailbox.ProcessedEmails / mailbox.TotalEmails * 100);
                                            }
                                            else if (mailbox.FileSizeBytes > 0 && mailbox.ProcessedBytes > 0)
                                            {
                                                // Use file size for progress when total emails unknown
                                                progress = (int)((double)mailbox.ProcessedBytes / mailbox.FileSizeBytes * 100);
                                            }
                                            else
                                            {
                                                progress = 0;
                                            }
                                            
                                            <div class="progress" style="width: 100px; height: 20px;">
                                                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                                     role="progressbar" 
                                                     style="width: @progress%">
                                                    @progress%
                                                </div>
                                            </div>
                                        }
                                        else if (mailbox.Status == "Completed")
                                        {
                                            <span class="text-success">100%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (mailbox.Status == "Completed")
                                        {
                                            <span>@mailbox.ProcessedEmails</span>
                                            @if (mailbox.FailedEmails > 0)
                                            {
                                                <span class="text-danger">(@mailbox.FailedEmails failed)</span>
                                            }
                                        }
                                        else if (mailbox.Status == "Processing")
                                        {
                                            <span>@mailbox.ProcessedEmails / @mailbox.TotalEmails</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@mailbox.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                    </td>
                                    <td class="d-flex gap-2 flex-wrap">
                                        <a href="/mailboxes/@mailbox.Id" class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary" href="/upload?mailboxId=@mailbox.Id">
                                            Reimport
                                        </a>
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => OpenRenameModal(mailbox)">
                                            Rename
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => OpenDeleteModal(mailbox)">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (_totalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(_currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" @onclick="() => LoadMailboxes(_currentPage - 1)">Previous</a>
                            </li>
                            @for (int i = 1; i <= _totalPages; i++)
                            {
                                <li class="page-item @(i == _currentPage ? "active" : "")">
                                    <a class="page-link" @onclick="() => LoadMailboxes(i)">@i</a>
                                </li>
                            }
                            <li class="page-item @(_currentPage == _totalPages ? "disabled" : "")">
                                <a class="page-link" @onclick="() => LoadMailboxes(_currentPage + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
        
        @if (_showRenameModal && _activeMailbox is not null)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Rename Mailbox</h5>
                            <button type="button" class="btn-close" @onclick="CloseRenameModal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Display Name</label>
                                <input class="form-control" @bind="_renameDisplayName" maxlength="500" />
                            </div>
                            @if (!string.IsNullOrEmpty(_modalError))
                            {
                                <div class="alert alert-danger">@_modalError</div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" @onclick="CloseRenameModal">Cancel</button>
                            <button class="btn btn-primary" @onclick="SaveRenameAsync">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (_showDeleteModal && _activeMailbox is not null)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete Mailbox "@(_activeMailbox.DisplayName ?? _activeMailbox.FileName)"</h5>
                            <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                        </div>
                        <div class="modal-body">
                            <p class="text-muted">Choose what you want to remove:</p>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="deleteUpload" @bind="_deleteModel.DeleteUpload" />
                                <label class="form-check-label" for="deleteUpload">
                                    Delete uploaded file (.mbox)
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="deleteEmails" @bind="_deleteModel.DeleteEmails" />
                                <label class="form-check-label" for="deleteEmails">
                                    Delete indexed emails
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="purgeNow" @bind="_deleteModel.PurgeNow" />
                                <label class="form-check-label" for="purgeNow">
                                    Purge immediately (SuperAdmins only)
                                </label>
                            </div>
                            @if (!string.IsNullOrEmpty(_modalError))
                            {
                                <div class="alert alert-danger">@_modalError</div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    Unless purge is requested, deletion jobs run after a 30-day retention window.
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                            <button class="btn btn-danger" @onclick="ScheduleDeletionAsync">Schedule Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
    </Authorized>
    <NotAuthorized>
        <CheckAuthAndRedirect />
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<MailboxDto>? _mailboxes;
    private bool _isLoading = true;
    private string _errorMessage = "";
    private int _currentPage = 1;
    private int _totalPages = 1;
    private System.Threading.Timer? _refreshTimer;
    private MailboxDto? _activeMailbox;
    private bool _showRenameModal;
    private bool _showDeleteModal;
    private string _renameDisplayName = string.Empty;
    private DeleteMailboxModel _deleteModel = new();
    private string _modalError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadMailboxes(1);
        
        // Auto-refresh every 5 seconds if there are processing mailboxes
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            if (_mailboxes?.Any(m => m.Status == "Processing") == true)
            {
                await InvokeAsync(async () =>
                {
                    await LoadMailboxes(_currentPage, silent: true);
                    StateHasChanged();
                });
            }
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private async Task LoadMailboxes(int page = 1, bool silent = false)
    {
        if (!silent)
        {
            _isLoading = true;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _errorMessage = "You must be logged in";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes?page={page}&pageSize=20";
            var request = new HttpRequestMessage(HttpMethod.Get, url);
            request.Headers.Add("Authorization", $"Bearer {token}");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ApiResponse<PagedMailboxesResponse>>();
                if (result?.Success == true && result.Data != null)
                {
                    _mailboxes = result.Data.Items;
                    _currentPage = result.Data.Page;
                    _totalPages = (int)Math.Ceiling((double)result.Data.TotalCount / result.Data.PageSize);
                    _errorMessage = "";
                }
            }
            else
            {
                _errorMessage = $"Failed to load mailboxes: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private RenderFragment GetStatusBadge(string status) => status switch
    {
        "Pending" => @<span class="badge bg-secondary">Pending</span>,
        "Queued" => @<span class="badge bg-info text-dark">Queued</span>,
        "Processing" => @<span class="badge bg-info text-dark">Processing</span>,
        "Completed" => @<span class="badge bg-success">Completed</span>,
        "Failed" => @<span class="badge bg-danger">Failed</span>,
        _ => @<span class="badge bg-secondary">@status</span>
    };

    private RenderFragment GetLifecycleBadge(MailboxDto mailbox)
    {
        if (mailbox.IsPendingDeletion)
        {
            return @<span class="badge bg-warning text-dark">Pending deletion</span>;
        }

        if (mailbox.UploadRemoved)
        {
            return @<span class="badge bg-secondary">Upload removed</span>;
        }

        return @<span class="badge bg-light text-dark">Active</span>;
    }

    private void OpenRenameModal(MailboxDto mailbox)
    {
        _activeMailbox = mailbox;
        _renameDisplayName = mailbox.DisplayName ?? mailbox.FileName;
        _modalError = string.Empty;
        _showRenameModal = true;
    }

    private void CloseRenameModal()
    {
        _showRenameModal = false;
        _activeMailbox = null;
        _modalError = string.Empty;
    }

    private void OpenDeleteModal(MailboxDto mailbox)
    {
        _activeMailbox = mailbox;
        _deleteModel = new DeleteMailboxModel();
        _modalError = string.Empty;
        _showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        _showDeleteModal = false;
        _activeMailbox = null;
        _modalError = string.Empty;
    }

    private async Task SaveRenameAsync()
    {
        if (_activeMailbox is null)
        {
            return;
        }

        if (string.IsNullOrWhiteSpace(_renameDisplayName))
        {
            _modalError = "Display name cannot be empty.";
            return;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _modalError = "Authentication required.";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{_activeMailbox.Id}";
            var request = new HttpRequestMessage(HttpMethod.Patch, url);
            request.Headers.Add("Authorization", $"Bearer {token}");
            request.Content = JsonContent.Create(new RenameMailboxRequest(_renameDisplayName.Trim()));

            var response = await Http.SendAsync(request);
            if (!response.IsSuccessStatusCode)
            {
                _modalError = $"Failed to rename mailbox ({response.StatusCode})";
                return;
            }

            if (_mailboxes != null)
            {
                _mailboxes = _mailboxes
                    .Select(m => m.Id == _activeMailbox.Id
                        ? m with { DisplayName = _renameDisplayName.Trim() }
                        : m)
                    .ToList();
            }

            CloseRenameModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
    }

    private async Task ScheduleDeletionAsync()
    {
        if (_activeMailbox is null)
        {
            return;
        }

        if (!_deleteModel.DeleteUpload && !_deleteModel.DeleteEmails)
        {
            _modalError = "Select at least one option to delete.";
            return;
        }

        try
        {
            var token = await AuthStateService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                _modalError = "Authentication required.";
                return;
            }

            var url = $"{Navigation.BaseUri}api/v1/mailboxes/{_activeMailbox.Id}/delete";
            var request = new HttpRequestMessage(HttpMethod.Post, url);
            request.Headers.Add("Authorization", $"Bearer {token}");
            request.Content = JsonContent.Create(new DeleteMailboxRequest(
                _deleteModel.DeleteUpload,
                _deleteModel.DeleteEmails,
                _deleteModel.PurgeNow,
                null));

            var response = await Http.SendAsync(request);
            if (!response.IsSuccessStatusCode)
            {
                _modalError = $"Failed to schedule deletion ({response.StatusCode})";
                return;
            }

            if (_mailboxes != null)
            {
                _mailboxes = _mailboxes
                    .Select(m => m.Id == _activeMailbox.Id
                        ? m with { IsPendingDeletion = true }
                        : m)
                    .ToList();
            }

            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
    }

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    private sealed class DeleteMailboxModel
    {
        public bool DeleteUpload { get; set; }
        public bool DeleteEmails { get; set; }
        public bool PurgeNow { get; set; }
    }
}

